<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <h1><%= title %></h1>
        <ul>
            <% if (locals.characters){%>
                <% characters.forEach(function(character){ %>
                <li><%=character.charactername%> - STRENGTH: <%=character.str%></li>
                <a href="/<%= character.characterid%>/update">Update</a>
                <form action="/<%= character.characterid %>/delete" method="POST" style="display:inline;">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this Character?');">Delete</button>
                </form>
                <%}); %>
            <% } %>        
        </ul>
        <a href="/new">NEW CHARACTER</a>
    </body>
</html>