<!DOCTYPE html>
<html>
    <head>
        <title><%=character.charactername%>'s Inventory</title>
    </head>
    <body>
        <h1><%=character.charactername%>'s Inventory</h1>
            <% if (locals.items){%>
                <Table>
                    <thead>
                        <th scope="col">ITEM</th>
                        <th scope="col">TYPE</th>
                        <th scope="col">DESCRIPTION</th>
                        <th scope="col">WEIGHT</th>
                        <th scope="col">QUANTITY</th>
                        <th scope="col">SUB-TOTAL</th>
                    </thead>
                    <tbody>
                        <% items.forEach(function(item){ %>
                            <tr>
                                <th scope="row"><%=item.itemname%></th>
                                <td><%=item.itemtype%></td>
                                <td><%=item.itemdescription%></td>
                                <td><%=item.weight%>lb</td>
                                <td><%=item.quantity%></td>
                                <td><%=item.weight * item.quantity%>lb</td>
                            </tr>

                        <%}); %>
                    </tbody>
                </Table>
            <% } %>
            
            <a href="/<%=character.characterid%>/editinventory">EDIT ITEMS</a>
            
            <br/>
            <h3>TOTAL Inventory: <%=totalInvWeight.sum%>lb / MAXIMUM: <%=character.str*15%>lb</h3>
            
            <a href="/">Back to character list </a>
            <a href="/<%= character.characterid%>/update">Update this Character</a>
            <form action="/<%= character.characterid %>/delete" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this Character?');">Delete this Character</button>
            </form>

    </body>
</html>