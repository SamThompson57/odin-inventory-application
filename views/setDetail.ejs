<!DOCTYPE html>
<html>
    <head>
        <title><%=set.setname%> Items</title>
    </head>
    <body>
        <h1><%=set.setname%> Items</h1>
        <% if (locals.items){%>
            <Table>
                <thead>
                    <th scope="col">ITEM</th>
                    <th scope="col">TYPE</th>
                    <th scope="col">DESCRIPTION</th>
                    <th scope="col">WEIGHT</th>
                    <th scope="col">EDIT</th>
                </thead>
                <tbody>
                    <% items.forEach(function(item){ %>
                        <tr>
                            <th scope="row"><%=item.itemname%></th>
                            <td><%=item.itemtype%></td>
                            <td><%=item.itemdescription%></td>
                            <td><%=item.weight%></td>
                            <td>
                                <a href="/<%=set.setid%>/<%= item.itemid%>/itemedit">Update</a>
                                <form action="/<%=set.setid%>/<%=item.itemid%>/itemdelete" method="POST" style="display:inline;">
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this Item?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                       
                    <%}); %>
                </tbody>
                    
            </Table>
                
        <% } %>             
        </ul>
        <a href="/itemsets">Back To Item Sets</a>
        <a href="/<%=set.setid%>/addItem">Add Item</a>
    </body>
</html>