<!DOCTYPE html>
<html>
    <head>
        <title>Item Sets</title>
    </head>
    <body>
        <h1>Item Sets</h1>
        <ul>
            <% if (locals.itemsets){%>
                <% itemsets.forEach(function(set){ %>
                <li><%=set.setname%></li>
                <a href="/<%= set.setid%>/edit">Edit</a>
                <form action="/<%= set.setid %>/setdelete" method="POST" style="display:inline;">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this set?');">Delete</button>
                </form>
                <a href="/<%= set.setid%>/itemlist">ITEM LIST</a>
                <%}); %>
            <% } %>        
        </ul>
        <a href="/newset">NEW SET</a>
    </body>
</html>